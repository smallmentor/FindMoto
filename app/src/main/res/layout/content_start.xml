<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MenuActivity"
    tools:showIn="@layout/app_bar_menu"
    android:background="@color/colorBackground">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/findmoto_logo" />

    <TextView
        android:id="@+id/tV_defaultNameStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tableRow1"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="150dp"
        android:text="目前選擇裝置："
        android:textColor="@color/colorContentText"
        android:textSize="16sp" />

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tableRow2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btnGetLocation"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="　紀錄我的位置　"
            android:textColor="#fff"
            android:textSize="18sp" />

    </TableRow>


    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp">

        <Button
            android:id="@+id/btnGotoList_start"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="更改選擇裝置"
            android:background="@drawable/button_style"
            android:textColor="#fff"
            android:textSize="18sp"/>

        <Space android:layout_width="10dp"/>

        <Button
            android:id="@+id/btnFind"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="開 始 尋 車"
            android:background="@drawable/button_style"
            android:textColor="#fff"
            android:textSize="18sp"/>

    </TableRow>

</RelativeLayout>